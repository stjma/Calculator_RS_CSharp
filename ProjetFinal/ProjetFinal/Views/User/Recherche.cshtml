
@{
    ViewBag.Title = "Recherche";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Recherche</h2>

@using (Ajax.BeginForm("Recherche", "User",

                new AjaxOptions
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "partielView"
                }
            ))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
      

        @Html.Hidden(name: "idRecherche", value: ViewContext.RouteData.Values["id"])

        <div class="form-group">
            @Html.Label("Lvl que vous avez", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="number" name="lvlActuel" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Xp que vous voulez", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="number" name="xpVoulu" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Recherche" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<div id="partielView">

</div>