@model ProjetFinal.Models.xp
@using ProjetFinal.Models;

<script src="~/Scripts/jquery.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>xp</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @{
            List<SelectListItem> listName = new List<SelectListItem>();

            projetFinalEntities1 projetFinalEntities = new projetFinalEntities1();


            foreach (xpTable xpTable in projetFinalEntities.xpTables.ToList())
            {             
                    listName.Add(new SelectListItem() { Text = xpTable.name, Value = xpTable.name });
            }

        }
      
        <div class="form-group">
            @Html.LabelFor(model => model.id_xpTable, "id_xpTable", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("table", listName)
                @Html.ValidationMessageFor(model => model.id_xpTable, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.lvl, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.lvl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lvl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.xps, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.xps, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.xps, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dif, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dif, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dif, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "AllXp")
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}